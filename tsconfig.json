{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Deno",
    "compilerOptions": {
        "jsx": "react",
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ESNext"],
        "outDir": "lib",
        "declaration": true,
        "declarationDir": "lib",
        "rootDir": ".",
        "composite": true,
        "resolveJsonModule": false,
        "moduleResolution": "node",
        "allowJs": true
    },
    "include": ["**/*.ts", "**/*.mts", "**/*.mjs", "**/*.js"],
    "exclude": ["lib"]
}